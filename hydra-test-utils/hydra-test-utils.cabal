cabal-version: 2.2

name: hydra-test-utils
version: 1.0.0
description: Hydra utilities for testing, aka. "Test Prelude"
author: IOG
copyright: 2021 IOG
license: Apache-2.0
license-files:
  LICENSE
  NOTICE
build-type: Simple
extra-source-files: README.md

source-repository head
  type: git
  location: https://github.com/input-output-hk/hydra-poc

library
  hs-source-dirs:
    src
  exposed-modules:
    Hydra.Test.Prelude
    Hydra.Network.Ports
  build-depends:
    base,
    filepath,
    hydra-prelude,
    HUnit,
    io-classes,
    network,
    random-shuffle,
    relude,
    temporary,
    warp,
  default-extensions:
    NoImplicitPrelude
    FlexibleContexts
  ghc-options:
    -Wall
    -Wcompat
    -Wunused-packages
  default-language:
    Haskell2010
